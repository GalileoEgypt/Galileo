mixin block-section(img, title)
  a(href="#").block
    img(src="images/#{img}", alt="")
    h3.title.mvl.fwb.h6 #{title}

mixin modal(id, img_url)
  div.modal.fade(id="#{id}", tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
    .modal-dialog 
      .modal-content
        .modal-body
          img.img-responsive(src="#{img_url}")